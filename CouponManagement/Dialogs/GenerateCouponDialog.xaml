<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="CouponManagement.Dialogs.GenerateCouponDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="สร้างคูปอง"
               PrimaryButtonText="สร้างคูปอง"
               CloseButtonText="ยกเลิก"
               DefaultButton="Primary"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <ContentDialog.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemColorGrayTextBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </ContentDialog.Resources>

    <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" Margin="20">
            
            <!-- Coupon Definition Info -->
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                    CornerRadius="4" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="ข้อมูลคำนิยามคูปอง" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="รหัส:" FontWeight="SemiBold" Width="100"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DefinitionCodeTextBlock" Text="-"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ชื่อ:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DefinitionNameTextBlock" Text="-" TextWrapping="Wrap"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="ประเภท:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DefinitionTypeTextBlock" Text="-"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="ราคา:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DefinitionPriceTextBlock" Text="-"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="คำอธิบาย:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DefinitionDescriptionTextBlock" Text="-" TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Current Status -->
            <StackPanel Spacing="8">
                <TextBlock Text="สถานะปัจจุบัน" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="สร้างแล้ว" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBlock x:Name="GeneratedCountTextBlock" Text="0 คูปอง" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="ใช้แล้ว" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBlock x:Name="UsedCountTextBlock" Text="0 คูปอง" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="คงเหลือ" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBlock x:Name="AvailableCountTextBlock" Text="0 คูปอง" FontSize="18" FontWeight="SemiBold" Foreground="{ThemeResource SystemAccentColor}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- Generation Settings -->
            <StackPanel Spacing="12">
                <TextBlock Text="การตั้งค่าการสร้าง" Style="{StaticResource SectionHeaderStyle}"/>
                
                <StackPanel>
                    <TextBlock Text="จำนวนที่ต้องการสร้าง *" Style="{StaticResource FieldLabelStyle}"/>
                    <NumberBox x:Name="QuantityNumberBox" 
                               Minimum="1" 
                               Maximum="10000" 
                               Value="10"
                               SpinButtonPlacementMode="Inline"
                               ValueChanged="QuantityNumberBox_ValueChanged"/>
                    <TextBlock Text="สร้างได้สูงสุด10,000 คูปองต่อครั้ง" Style="{StaticResource InfoTextStyle}"/>
                </StackPanel>

                <!-- New: toggle between entering quantity vs entering sequence range -->
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <CheckBox x:Name="UseSequenceCheckBox" Content="กรอกช่วงตัวเลขเอง (Start/End)" Checked="UseSequenceCheckBox_Checked" Unchecked="UseSequenceCheckBox_Unchecked"/>
                </StackPanel>

                <!-- Start/End sequence optional -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <StackPanel Width="200">
                        <TextBlock Text="เลขเริ่มต้น" Style="{StaticResource FieldLabelStyle}"/>
                        <NumberBox x:Name="StartSequenceNumberBox" Minimum="0" PlaceholderText="เว้นว่าง" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Width="200">
                        <TextBlock Text="เลขสิ้นสุด" Style="{StaticResource FieldLabelStyle}"/>
                        <NumberBox x:Name="EndSequenceNumberBox" Minimum="0" PlaceholderText="เว้นว่าง" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="ตัวอย่างรหัสที่จะสร้าง" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBlock x:Name="CodePreviewTextBlock" 
                               Style="{StaticResource InfoTextStyle}"
                               Text="CF0001END ถึง CF0010END"/>
                    <TextBlock x:Name="CodeSamplesTextBlock" Style="{StaticResource InfoTextStyle}" Text="ตัวอย่าง: -"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Warning/Info -->
            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" 
                    CornerRadius="4" Padding="12" BorderThickness="1" 
                    BorderBrush="{ThemeResource SystemFillColorAttentionBrush}">
                <StackPanel Spacing="8">
                    <TextBlock Text="⚠️ ข้อควรระวัง" FontWeight="SemiBold"/>
                    <TextBlock Text="• คูปองที่สร้างแล้วจะไม่สามารถลบได้ สามารถเปลี่ยนสถานะเป็น 'ใช้แล้ว' เท่านั้น" 
                               TextWrapping="Wrap" FontSize="12"/>
                    <TextBlock Text="• รหัสคูปองจะถูกสร้างตามลำดับที่กำหนดไว้ในคำนิยาม" 
                               TextWrapping="Wrap" FontSize="12"/>
                    <TextBlock Text="• ตรวจสอบข้อมูลให้ถูกต้องก่อนกดสร้าง" 
                               TextWrapping="Wrap" FontSize="12"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
