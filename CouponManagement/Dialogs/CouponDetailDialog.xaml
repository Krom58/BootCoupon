<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="CouponManagement.Dialogs.CouponDetailDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="รายละเอียดคูปอง"
               CloseButtonText="ปิด"
               DefaultButton="Close">

    <ScrollViewer>
        <StackPanel Spacing="15" Margin="20">
            
            <!-- Coupon Code -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="รหัสคูปอง" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="CouponCodeTextBlock"
                               FontFamily="Consolas"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Definition Info -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="รหัสคำนิยาม" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="DefinitionCodeTextBlock" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="แบทช์" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="BatchNumberTextBlock" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                    <TextBlock Text="ชื่อคำนิยาม" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="DefinitionNameTextBlock" 
                               FontSize="14" 
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>

            <!-- Status and Creation Info -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="สถานะ" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="วันที่สร้าง" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="CreatedAtTextBlock" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Usage Information (only if used) -->
            <StackPanel x:Name="UsageInfoPanel" Spacing="10">
                <TextBlock Text="ข้อมูลการใช้งาน" 
                           FontWeight="SemiBold" 
                           FontSize="16"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="ใช้โดย" 
                                   FontWeight="SemiBold" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                        <TextBlock x:Name="UsedByTextBlock" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="วันที่ใช้" 
                                   FontWeight="SemiBold" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                        <TextBlock x:Name="UsedDateTextBlock" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>
