<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="CouponManagement.GeneratedCouponsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:CouponManagement.Converters"
      x:Name="ThisPage"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
        <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource SystemAccentColor}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Grid.Column="0"
                        Style="{StaticResource AccentButtonStyle}"
                        Background="Transparent"
                        Click="BackButton_Click"
                        ToolTipService.ToolTip="กลับ">
                    <SymbolIcon Symbol="Back" Foreground="White"/>
                </Button>

                <TextBlock Grid.Column="1" 
                           Text="จัดการคูปองที่ถูกสร้าง" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button x:Name="ExportButton"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="White"
                            Foreground="{ThemeResource SystemAccentColor}"
                            Click="ExportButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Download"/>
                            <TextBlock Text="ส่งออกข้อมูล"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="RefreshButton"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="White"
                            Foreground="{ThemeResource SystemAccentColor}"
                            Click="RefreshButton_Click"
                            ToolTipService.ToolTip="รีเฟรชข้อมูล">
                        <SymbolIcon Symbol="Refresh"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="20,15">
            <Expander x:Name="FilterExpander" Header="ตัวกรองข้อมูล" IsExpanded="True">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- make columns proportional to available space -->
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 1: Definition and Code Search -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="คำนิยามคูปอง:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DefinitionComboBox"
                                  PlaceholderText="เลือกคำนิยาม..."
                                  HorizontalAlignment="Stretch"
                                  SelectionChanged="DefinitionComboBox_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                        <TextBlock Text="ค้นหารหัสคูปอง:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchCodeTextBox"
                                 PlaceholderText="พิมพ์รหัสคูปอง..."
                                 TextChanged="SearchCodeTextBox_TextChanged"
                                 HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                        <TextBlock Text="สถานะการใช้งาน:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusComboBox"
                                  PlaceholderText="เลือกสถานะ..."
                                  HorizontalAlignment="Stretch"
                                  SelectionChanged="StatusComboBox_SelectionChanged">
                            <ComboBoxItem Content="ทั้งหมด" Tag=""/>
                            <ComboBoxItem Content="ยังไม่ใช้" Tag="false"/>
                            <ComboBoxItem Content="ใช้แล้ว" Tag="true"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,10,10">
                        <TextBlock Text="สร้างโดย:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="CreatedByTextBox"
                                 PlaceholderText="ชื่อผู้สร้าง..."
                                 TextChanged="CreatedByTextBox_TextChanged"
                                 HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Row 2: Date Range -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="วันที่เริ่มต้น:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="StartDatePicker"
                                    HorizontalAlignment="Stretch"
                                    DateChanged="StartDatePicker_DateChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,10">
                        <TextBlock Text="วันที่สิ้นสุด:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="EndDatePicker"
                                    HorizontalAlignment="Stretch"
                                    DateChanged="EndDatePicker_DateChanged"/>
                    </StackPanel>

                    <!-- Row 3: Action Buttons -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button x:Name="ApplyFilterButton"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="ApplyFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Find"/>
                                <TextBlock Text="ค้นหา"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ClearFilterButton"
                                Click="ClearFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Clear"/>
                                <TextBlock Text="ล้างตัวกรอง"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander>
        </Border>

        <!-- Results -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Info -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                    <TextBlock x:Name="ResultCountTextBlock"
                               Text="พบ 0 รายการ"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <Border Background="{ThemeResource AccentButtonBackground}"
                            CornerRadius="4"
                            Padding="8,4"
                            Visibility="{Binding ShowStatistics, ElementName=ThisPage}">
                        <TextBlock x:Name="StatisticsTextBlock"
                                   Foreground="White"
                                   FontSize="12"/>
                    </Border>
                </StackPanel>

                <!-- Pagination Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button x:Name="PreviousPageButton"
                            Content="หน้าก่อน"
                            IsEnabled="False"
                            Click="PreviousPageButton_Click"/>

                    <TextBlock x:Name="PageInfoTextBlock"
                               Text="หน้า 1 จาก 1"
                               VerticalAlignment="Center"
                               MinWidth="80"
                               TextAlignment="Center"/>

                    <Button x:Name="NextPageButton"
                            Content="หน้าถัดไป"
                            IsEnabled="False"
                            Click="NextPageButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Data Grid -->
            <!-- Reserve space on right for scrollbar to keep header and rows aligned -->
            <ListView x:Name="CouponsListView"
                      Grid.Row="1"
                      SelectionMode="Extended"
                      IsItemClickEnabled="True"
                      ItemClick="CouponsListView_ItemClick"
                      Padding="0,0,16,0"    
                      HorizontalContentAlignment="Stretch">

                <!-- Remove default ListViewItem padding/margin and force stretch so header and items align -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="{ThemeResource SystemAccentColor}" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header cells (no border thickness) -->
                            <Border Grid.Column="0" Padding="10,0">
                                <TextBlock Text="รหัสคูปอง" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" Padding="10,0">
                                <TextBlock Text="รหัสคำนิยาม" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="2" Padding="10,0">
                                <TextBlock Text="ชื่อคำนิยาม" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="3" Padding="10,0">
                                <TextBlock Text="แบทช์" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>

                            <Border Grid.Column="4" Padding="10,0">
                                <TextBlock Text="สถานะ" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>

                            <Border Grid.Column="5" Padding="10,0">
                                <TextBlock Text="สร้างโดย" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="6" Padding="10,0">
                                <TextBlock Text="วันที่สร้าง" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="7" Padding="10,0">
                                <TextBlock Text="การใช้งาน" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>

                            <!-- separators placed between columns, rendered on top -->
                            <Rectangle Grid.Column="0" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="1" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="2" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="3" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="4" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="5" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            <Rectangle Grid.Column="6" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Outer Border for row separator -->
                        <Border BorderBrush="#333" BorderThickness="0,0,0,1" Background="{ThemeResource LayerFillColorDefaultBrush}">
                            <Grid Height="50" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Each cell without border thickness; separators drawn by rectangles below -->
                                <Border Grid.Column="0" Padding="10,0">
                                    <TextBlock Text="{Binding GeneratedCode}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Consolas" FontWeight="SemiBold"/>
                                </Border>

                                <Border Grid.Column="1" Padding="10,0">
                                    <TextBlock Text="{Binding CouponDefinitionCode}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="2" Padding="10,0">
                                    <TextBlock Text="{Binding CouponDefinitionName}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                </Border>

                                <Border Grid.Column="3" Padding="10,0">
                                    <TextBlock Text="{Binding BatchNumber}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="4" Padding="10,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border CornerRadius="10" Padding="8,4" Background="{Binding IsUsed, Converter={StaticResource BoolToStatusColorConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                </Border>

                                <Border Grid.Column="5" Padding="10,0">
                                    <TextBlock Text="{Binding CreatedBy}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="6" Padding="10,0">
                                    <TextBlock Text="{Binding CreatedAt, Converter={StaticResource DateTimeToStringConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="12"/>
                                </Border>

                                <Border Grid.Column="7" Padding="10,0">
                                    <TextBlock Text="{Binding UsageText}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                </Border>

                                <!-- separators placed between columns, rendered on top to ensure visibility over badges -->
                                <Rectangle Grid.Column="0" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="1" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="2" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="3" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="4" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="5" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                                <Rectangle Grid.Column="6" HorizontalAlignment="Right" Width="1" Fill="#444" VerticalAlignment="Stretch" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                        x:Name="EmptyStatePanel"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="15">
                <SymbolIcon Symbol="Document" Width="48" Height="48" Foreground="{ThemeResource SystemAccentColor}"/>
                <TextBlock Text="ไม่พบคูปองที่ตรงกับเงื่อนไขการค้นหา"
                           FontSize="16"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="ลองเปลี่ยนเงื่อนไขการค้นหาหรือล้างตัวกรอง"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading State -->
            <Grid Grid.Row="1"
                  x:Name="LoadingPanel"
                  Visibility="Collapsed"
                  Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="15">
                    <ProgressRing IsActive="True" Width="40" Height="40"/>
                    <TextBlock Text="กำลังโหลดข้อมูล..."
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock"
                           Grid.Column="0"
                           Text="พร้อม"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="LastUpdatedTextBlock"
                           Grid.Column="1"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>