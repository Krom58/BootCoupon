<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BootCoupon.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BootCoupon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with app title -->
        <StackPanel Grid.Row="0" Margin="0,10,0,30">
            <TextBlock Text="ระบบจัดการคูปอง" 
                       FontSize="48" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <Rectangle Height="2" 
                       Fill="{ThemeResource SystemAccentColor}" 
                       Margin="0,10,0,0" 
                       Opacity="0.6"/>
        </StackPanel>

        <!-- Main buttons -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Spacing="40">
            <Button x:Name="AddCouponButton" 
                    Content="เพิ่มคูปอง" 
                    Click="AddCouponButton_Click" 
                    Width="380" 
                    Height="100" 
                    FontSize="28"
                    HorizontalAlignment="Stretch"
                    CornerRadius="8">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0078D7"/>
                        <GradientStop Color="#FF005A9E" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
            <Button x:Name="CreateReceiptButton" 
                    Content="ออกใบเสร็จ" 
                    Click="CreateReceiptButton_Click" 
                    Width="380" 
                    Height="100" 
                    FontSize="28"
                    HorizontalAlignment="Stretch"
                    CornerRadius="8">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF107C10"/>
                        <GradientStop Color="#FF0B5B0B" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        
        <!-- Footer with settings button -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <!-- Settings button - larger and more prominent -->
            <Button x:Name="SettingsButton" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="280"
                    Height="80"
                    FontSize="24"
                    Padding="20,10"
                    CornerRadius="8"
                    Click="SettingsButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xE713;" 
                              FontSize="32"/>
                    <TextBlock Text="ตั้งค่ารหัสใบเสร็จ" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCA5010"/>
                        <GradientStop Color="#FFAE4000" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>